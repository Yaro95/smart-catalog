/*
px - четкие параметры изображения.
vh - привязано к высоте окна браузера.
% - привязано к высоте родительского элемента.
*/

#previewImage {
    width: 50%; /* Ограничиваем ширину 50% от экрана */
    max-width: 600px; /* Ограничиваем максимальную ширину, чтобы изображение не стало слишком большим */
    height: auto; /* Сохраняем пропорции */
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 50px; /* Отступ сверху для красивого расположения */
    border: 2px solid #ccc; /* Можно добавить рамку для презентационного вида */
    padding: 10px; /* Отступ для рамки */
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Легкая тень для презентационного стиля */
}

#previewVideo {
    width: 50%; /* Ограничиваем ширину 50% от экрана */
    max-width: 600px; /* Ограничиваем максимальную ширину */
    height: auto; /* Сохраняем пропорции */
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 50px; /* Отступ сверху */
    border: 2px solid #ccc; /* Рамка для видео */
    padding: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
